doctype html
head
  // Required meta tags
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
  // Bootstrap CSS
  link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css' integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm' crossorigin='anonymous')
  title Hello, world!

body
  .container
    nav.navbar.navbar-light.bg-light
      a(href='/') Home
  form(method='POST' action='')
    .form-group
      label(for='firstName') First Name
      input.form-control(type='text' placeholder=#(firstName)'Sample First Name' readonly='')
    .form-group
      label(for='lastName') Last Name
      input.form-control(type='text' placeholder=#(lastName) readonly='')
    .form-group
      label(for='displayName') Display Name
      input.form-control(type='text' placeholder=#(displayName) readonly='')
    .form-group
      label(for='emailAddress') Email address
      input#emailAddress.form-control(type='email' name='emailAddress' aria-describedby='emailHelp' placeholder=#(emailAddress)  readonly=''/*required=''*/)
      small#emailHelp.form-text.text-muted We&apos;ll never share your email with anyone else.
    //.form-group
      label(for='inputPassword') Password
      input#inputPassword.form-control(type='password' placeholder='Password')
    .form-group
      label(for='userType') User Type
      select#userType.form-control(name='userType')
        option driver
        option rider
    .form-check
      label.form-check-label
        input.form-check-input(type='checkbox' required='')
        |           I hereby verify that I am a member of the NMH community, and I agree to the terms and services.
        br
    br
    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg

  // Optional JavaScript
  // jQuery first, then Popper.js, then Bootstrap JS
  script(src='https://code.jquery.com/jquery-3.2.1.slim.min.js' integrity='sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN' crossorigin='anonymous')
  script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js' integrity='sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q' crossorigin='anonymous')
  script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js' integrity='sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl' crossorigin='anonymous')
